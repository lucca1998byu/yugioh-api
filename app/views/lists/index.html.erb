<p>List index</p>
<table>
  <% @lists.each do |l| %>
    <tr class="">
      <td>
        <%= link_to l.name, list_path(l)%>
      </td>
      <td>
        <%= link_to list_path(l), data: { turbo_method: :delete, turbo_confirm: "are you sure?" } do %>
          <%= render 'shared/trash'%>
        <% end %>
      </td>
      <td>
        <%=link_to edit_list_path(l), data: { turbo_method: :edit } do %>
          <i class="fa-solid fa-pen-to-square"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
<%= link_to "new list", new_list_path, class:"btn btn-success" %>
<%= link_to "cards", cards_path, class:"btn btn-primary" %>
